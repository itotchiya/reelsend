// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  roleId        String?
  status        String    @default("ACTIVE") // ACTIVE, INVITED, DISABLED
  inviteToken   String?   @unique
  inviteExpires DateTime?
  invitedBy     String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  role              Role?      @relation(fields: [roleId], references: [id])
  accounts          Account[]
  sessions          Session[]
  templatesCreated  Template[] @relation("TemplatesCreated")
  templatesUpdated  Template[] @relation("TemplatesUpdated")
  campaignsCreated  Campaign[] @relation("CampaignsCreated")
  campaignsUpdated  Campaign[] @relation("CampaignsUpdated")
  campaignsStarted  Campaign[] @relation("CampaignsStarted")
  templateActivities TemplateActivity[] @relation("TemplateActivities")
  segmentsCreated   Segment[] @relation("SegmentsCreated")
  audiencesCreated  Audience[] @relation("AudiencesCreated")
}

// ============================================
// RBAC - ROLES & PERMISSIONS
// ============================================

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isSystem    Boolean  @default(false) // System roles can't be deleted
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  permissions RolePermission[]
  users       User[]
}

model Permission {
  id          String   @id @default(cuid())
  key         String   @unique  // e.g., "clients:create"
  name        String            // e.g., "Create Clients"
  description String?
  category    String            // e.g., "Clients"
  createdAt   DateTime @default(now())
  
  roles       RolePermission[]
}

model RolePermission {
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())
  
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  
  @@id([roleId, permissionId])
}

// Client Portal Access - for external clients
model ClientPortalUser {
  id          String   @id @default(cuid())
  clientId    String
  email       String
  name        String?
  password    String?
  lastLoginAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  @@unique([clientId, email])
}

// Shareable Links for campaigns/analytics
model ShareableLink {
  id          String    @id @default(cuid())
  token       String    @unique @default(cuid())
  clientId    String
  campaignId  String?   // null = full client dashboard
  password    String?   // optional password protection
  expiresAt   DateTime?
  createdById String
  createdAt   DateTime  @default(now())
  
  client      Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  campaign    Campaign? @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  @@index([token])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
  
  @@id([identifier, token])
}

// ============================================
// CLIENTS & BRANDING
// ============================================

model Client {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  logo        String?
  brandColors Json?    // { primary, secondary, cta }
  fonts       Json?    // { heading, body }
  active      Boolean  @default(true)
  status      String   @default("active") // active, suspended, deactivated
  isPublic    Boolean  @default(false)
  
  // SMTP Settings
  smtpHost     String?
  smtpPort     Int?
  smtpUser     String?
  smtpPassword String?
  smtpSecure   Boolean @default(true)
  smtpVerified Boolean @default(false)
  smtpLastTested DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  domains        Domain[]
  audiences      Audience[]
  templates      Template[]
  campaigns      Campaign[]
  portalUsers    ClientPortalUser[]
  shareableLinks ShareableLink[]
  smtpTestLogs   SmtpTestLog[]
  savedBlocks    SavedBlock[]
}

model Domain {
  id           String       @id @default(cuid())
  clientId     String
  domain       String
  fromEmail    String?
  status       DomainStatus @default(PENDING)
  verifiedAt   DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  client       Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  @@unique([clientId, domain])
}

enum DomainStatus {
  PENDING
  VERIFIED
  FAILED
}

// ============================================
// AUDIENCES & CONTACTS
// ============================================

model Audience {
  id           String    @id @default(cuid())
  clientId     String
  name         String
  description  String?
  contactCount Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  createdById  String?
  
  client       Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  createdBy    User?     @relation("AudiencesCreated", fields: [createdById], references: [id], onDelete: SetNull)
  contacts     Contact[]
  segments     Segment[]
  campaigns    Campaign[]
  
  @@unique([clientId, name])
}

model Contact {
  id            String         @id @default(cuid())
  audienceId    String
  email         String
  firstName     String?
  lastName      String?
  phone         String?
  country       String?
  city          String?
  street        String?
  birthday      DateTime?
  gender        Gender?
  maritalStatus MaritalStatus?
  metadata      Json?
  status        ContactStatus  @default(ACTIVE)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  audience      Audience       @relation(fields: [audienceId], references: [id], onDelete: Cascade)
  events        CampaignEvent[]
  segments      SegmentContact[]
  
  @@unique([audienceId, email])
  @@index([email])
  @@index([status])
  @@index([country])
  @@index([gender])
  @@index([maritalStatus])
}

enum ContactStatus {
  ACTIVE
  UNSUBSCRIBED
  BOUNCED
  BLACKLISTED
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
  SEPARATED
  OTHER
}

model Segment {
  id          String     @id @default(cuid())
  audienceId  String
  name        String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  createdById String?
  
  audience    Audience   @relation(fields: [audienceId], references: [id], onDelete: Cascade)
  createdBy   User?      @relation("SegmentsCreated", fields: [createdById], references: [id], onDelete: SetNull)
  contacts    SegmentContact[]
  campaigns   Campaign[]
  
  @@unique([audienceId, name])
}

model SegmentContact {
  segmentId String
  contactId String
  addedAt   DateTime @default(now())
  
  segment   Segment @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  @@id([segmentId, contactId])
}

// ============================================
// EMAIL TEMPLATES
// ============================================

model BaseLayout {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  htmlContent String     @db.Text
  variables   Json       // Customizable variables like { primaryColor, logo, etc. }
  previewUrl  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  templates   Template[]
}

model Template {
  id           String      @id @default(cuid())
  clientId     String?
  baseLayoutId String?
  name         String
  description  String?
  brandValues  Json?       // Applied brand customizations
  htmlContent  String      @db.Text
  jsonContent  Json?       // Structured content for editor
  previewUrl   String?
  isAIGenerated Boolean    @default(false) // True if created via Prompt Builder
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  createdById  String?     // User who created the template
  updatedById  String?     // User who last updated the template
  
  client       Client?     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  baseLayout   BaseLayout? @relation(fields: [baseLayoutId], references: [id], onDelete: SetNull)
  createdBy    User?       @relation("TemplatesCreated", fields: [createdById], references: [id], onDelete: SetNull)
  updatedBy    User?       @relation("TemplatesUpdated", fields: [updatedById], references: [id], onDelete: SetNull)
  campaigns    Campaign[]
  activities   TemplateActivity[]
  
  @@unique([clientId, name])
}

model TemplateActivity {
  id          String   @id @default(cuid())
  templateId  String
  userId      String?
  action      String   // "created", "updated", "duplicated", "details_updated"
  description String?  // Optional description of what changed
  createdAt   DateTime @default(now())
  
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user        User?    @relation("TemplateActivities", fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([templateId])
  @@index([createdAt])
}

// ============================================
// CAMPAIGNS
// ============================================

model Campaign {
  id          String         @id @default(cuid())
  clientId    String
  templateId  String?
  audienceId  String?
  segmentId   String?
  name        String
  description String?
  subject     String?
  previewText String?
  fromName    String?
  fromEmail   String?
  status      CampaignStatus @default(DRAFT)
  scheduledAt DateTime?
  sentAt      DateTime?
  sentiment   String?        // Not used but keeping for alignment
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  createdById String?
  updatedById String?
  startedById String?
  
  client      Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  template    Template?       @relation(fields: [templateId], references: [id], onDelete: Restrict)
  audience    Audience?       @relation(fields: [audienceId], references: [id], onDelete: Restrict)
  segment     Segment?        @relation(fields: [segmentId], references: [id], onDelete: SetNull)
  createdBy   User?           @relation("CampaignsCreated", fields: [createdById], references: [id], onDelete: SetNull)
  updatedBy   User?           @relation("CampaignsUpdated", fields: [updatedById], references: [id], onDelete: SetNull)
  startedBy   User?           @relation("CampaignsStarted", fields: [startedById], references: [id], onDelete: SetNull)
  events      CampaignEvent[]
  analytics   CampaignAnalytics?
  shareableLinks ShareableLink[]
  
  @@index([status])
  @@index([scheduledAt])
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENDING
  COMPLETED
  FAILED
  CANCELLED
}

model CampaignEvent {
  id         String    @id @default(cuid())
  campaignId String
  contactId  String
  type       EventType
  metadata   Json?     // Additional event data (e.g., clicked URL)
  createdAt  DateTime  @default(now())
  
  campaign   Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contact    Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  @@index([campaignId, type])
  @@index([contactId])
}

enum EventType {
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  COMPLAINED
  UNSUBSCRIBED
}

model CampaignAnalytics {
  id           String   @id @default(cuid())
  campaignId   String   @unique
  sent         Int      @default(0)
  delivered    Int      @default(0)
  opened       Int      @default(0)
  clicked      Int      @default(0)
  bounced      Int      @default(0)
  complained   Int      @default(0)
  unsubscribed Int      @default(0)
  updatedAt    DateTime @updatedAt
  
  campaign     Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
}

// ============================================
// ACTIVITY LOGS
// ============================================

model ActivityLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  resource   String   // e.g., "campaign", "client", "template"
  resourceId String?
  details    Json?
  createdAt  DateTime @default(now())
  
  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
}

// ============================================
// SMTP TEST LOGS
// ============================================

model SmtpTestLog {
  id           String   @id @default(cuid())
  clientId     String
  smtpHost     String
  smtpPort     Int
  smtpUser     String
  smtpSecure   Boolean
  success      Boolean
  errorMessage String?
  testedAt     DateTime @default(now())
  
  client       Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  @@index([clientId, testedAt])
}

// ============================================
// SAVED EMAIL BLOCKS
// ============================================

model SavedBlock {
  id          String   @id @default(cuid())
  clientId    String?  // null = global block available to all clients
  name        String
  description String?
  category    String?  // "headers", "footers", "cta", "content"
  jsonContent Json     // Block structure for EmailBuilder
  thumbnail   String?  // Preview image URL (R2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  @@index([clientId])
  @@index([category])
}
